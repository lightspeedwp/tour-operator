<?xml version="1.0"?>
<ruleset name="WordPress-LSX"
         namespace="WordPressCS\WordPress">
    <description>Coding standards</description>

	<!-- Pass some flags to PHPCS:
		 p flag: Show progress of the run.
		 s flag: Show sniff codes in all reports.
	-->
	<arg value="ps"/>

	<!-- Check up to 8 files simultanously. -->
	<arg name="parallel" value="8"/>

	<!-- Check all files in this directory and the directories below it. -->
	<file>.</file>

	<!-- Exclude directories. -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/woocommerce/*</exclude-pattern>
	<exclude-pattern>*/tribe-events/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/.github/*</exclude-pattern>
	<exclude-pattern>gulpfile\.js</exclude-pattern>
	<exclude-pattern>*/wp-content/*</exclude-pattern>
	<exclude-pattern>*.css*</exclude-pattern>
	<exclude-pattern>*.js*</exclude-pattern>
	<exclude-pattern>phpcs-report.*</exclude-pattern>
	<exclude-pattern>eslint-report.*</exclude-pattern>
	<exclude-pattern>*/__snapshots__/*</exclude-pattern>

	<config name="minimum_supported_wp_version" value="5.3" />
	<config name="testVersion" value="8.0-" />

	<!-- Use WordPress rulesets -->
	<rule ref="WordPress-Core"/>
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress-Docs"/>

	<!-- Custom exclusions -->
	<rule ref="WordPress-Core">
		<exclude name="WordPress.WP.GlobalVariablesOverride.Prohibited"/>
		<exclude name="Generic.ControlStructures.InlineControlStructure.NotAllowed"/>
	</rule>

	<!-- PHP Compatibility -->
	<rule ref="PHPCompatibilityWP"/>

	<!-- Accessibility and Security -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="tour-operator"/>
		</properties>
	</rule>
	<rule ref="WordPress.Security.EscapeOutput"/>
</ruleset>
