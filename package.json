{
  "name": "tour-operator",
  "version": "2.1.0",
  "description": "Tour Operators for LSX",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "wp-scripts start",
    "build": "wp-scripts build",
    "build-pot": "wp i18n make-pot . languages/tour-operator.pot",
    "build-mopo": "rm -R languages/tour-operator-en_EN.mo && cp languages/tour-operator.pot languages/tour-operator-en_EN.po && wp i18n make-mo languages",
    "translate-US": "cp languages/tour-operator-en_EN.po languages/tour-operator-en_US.po && cp languages/tour-operator-en_EN.mo languages/tour-operator-en_US.mo",
    "lint:js": "wp-scripts lint-js",
    "lint:css": "wp-scripts lint-style",
    "lint:php": "composer phpcs",
    "lint:php:fix": "composer phpcbf",
    "lint:php:report": "composer phpcs:report",
    "lint:all": "npm run lint:php && npm run lint:js && npm run lint:css",
    "format": "npm run lint:php:fix && wp-scripts format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightspeeddevelopment/tour-operator"
  },
  "keywords": [
    "lsx",
    "tours",
    "safaris",
    "accommodation"
  ],
  "author": "LightSpeed",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lightspeeddevelopment/tour-operator/issues"
  },
  "homepage": "https://github.com/lightspeeddevelopment/tour-operator#readme",
  "devDependencies": {
    "@babel/preset-react": "^7.27.1",
    "@wordpress/scripts": "^30.21.0",
    "@wordpress/eslint-plugin": "^22.14.0",
    "@wordpress/stylelint-config": "^23.21.0",
    "webpack-remove-empty-scripts": "^1.1.1"
  },
  "dependencies": {
    "@wordpress/blocks": "^15.1.0",
    "classnames": "^2.2.6"
  }
}
